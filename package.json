{
  "name": "sounddocs",
  "private": true,
  "version": "1.5.6.1.1",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "agents/*",
    "models/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @sounddocs/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "preview": "pnpm --filter @sounddocs/web preview",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "3.5.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "cd apps/web && tsc --noEmit --project tsconfig.app.json",
      "cd apps/web && eslint --max-warnings=0 --cache",
      "prettier --write --ignore-unknown"
    ],
    "**/*.{js,jsx}": [
      "cd apps/web && eslint --max-warnings=0 --cache",
      "prettier --write --ignore-unknown"
    ],
    "**/*.{py}": "ruff check --fix --max-warnings=0",
    "**/*.sql": "sqlfluff fix --dialect postgres"
  }
}
