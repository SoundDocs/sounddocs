{
  "name": "sounddocs",
  "private": true,
  "version": "1.5.6.1",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "agents/*",
    "models/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @sounddocs/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "preview": "pnpm --filter @sounddocs/web preview",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^20.0.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "3.5.3",
    "typescript-eslint": "^8.3.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{ts,tsx,js}": "eslint --max-warnings=0",
    "**/*.py": "echo 'Python linting disabled for legacy code'",
    "**/*.sql": "echo 'SQL linting disabled for legacy code'"
  }
}
